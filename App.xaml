<!--
    App.xaml
    Entry point for the SSEC_Inventory WPF application.
    - Specifies the application class and startup window.
    - Provides a place to define application-wide resources such as styles, templates, and brushes.
    - The StartupUri attribute determines which window opens first (MainWindow.xaml).
    - Application.Resources can be used to share resources across all windows and controls.
-->

<Application x:Class="SSEC_Inventory.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SSEC_Inventory"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <!--
             Application-wide resources (styles, templates, brushes, etc.) can be defined here.
             These resources are available to all windows and controls in the application.
         -->
    </Application.Resources>
</Application>
